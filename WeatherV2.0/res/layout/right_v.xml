<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_right"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginLeft="150dp"
    android:layout_marginRight="150dp"
    android:background="@color/grey21"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey21"
        android:gravity="center_horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/color_bn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/color"
            android:text="颜色设置"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/about_we"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/contact"
            android:text="关于我们"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/thank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/recommand"
            android:text="谢鸣"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="城市列表"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="125sp"
                android:layout_height="25sp"
                android:background="@drawable/rounded_edittext_states"
                android:completionThreshold="1"
                android:drawableLeft="@drawable/search"
                android:singleLine="true"
                android:textSize="15sp" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <com.zoe.slidingmenu.view.FixListViewBugLinearLayout
        android:id="@+id/mylaout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:visibility="visible" >

        <ListView
            android:id="@+id/lvRight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </com.zoe.slidingmenu.view.FixListViewBugLinearLayout>

</LinearLayout>