<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/beijing"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4.0px"
        android:paddingTop="4.0px" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27.0px"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/lay_tianqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="10.0px"
            android:paddingRight="10.0px" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tianqi"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_tianqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:text="-6℃-14℃"
                android:textColor="#ffc0c0c0"
                android:textSize="20.0sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/lay_tianqi"
            android:gravity="center_vertical"
            android:paddingLeft="10.0px"
            android:paddingRight="10.0px" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shijian" />

            <TextView
                android:id="@+id/tv_shijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013-3-13 14:30"
                android:textColor="#ffc0c0c0"
                android:textSize="20.0sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:background="@drawable/titletiao" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/tiao1" >

        <TextView
            android:id="@+id/newmovie"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="100.0dip"
            android:layout_weight="19.0"
            android:background="@drawable/btn_menu"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="最新电影"
            android:textColor="#ffffffff"
            android:textSize="34.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hotmovie"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="21.0"
            android:background="@drawable/btn_menu"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="热播大片"
            android:textColor="#ff4d4f50"
            android:textSize="34.0sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/typearea"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginRight="70.0dip"
            android:layout_weight="16.0"
            android:background="@drawable/btn_menu"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="20.0dip"
            android:paddingTop="10.0dip" >

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginLeft="5.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/tubiaobeiyong" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dip"
                android:text="类型:"
                android:textColor="#ff4d4f50"
                android:textSize="34.0sp" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="#ff4d4f50"
                android:textSize="34.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60.0dip"
                android:text="地区:"
                android:textColor="#ff4d4f50"
                android:textSize="34.0sp" />

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="#ff4d4f50"
                android:textSize="34.0sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0px"
        android:layout_weight="1.0" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="65.0dip"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/xu" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180.0dip"
                    android:layout_marginTop="70.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/xu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="65.0dip"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/xu1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180.0dip"
                    android:layout_marginTop="70.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/xu1" />
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:focusable="false" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/suosoubuchu"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginRight="4.0dip"
        android:gravity="right|center" >

        <LinearLayout
            android:id="@+id/gundongtiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="230.0dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/p_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_n" />

            <TextView
                android:id="@+id/p_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:gravity="center_vertical"
                android:text="00"
                android:textColor="#ffffffff"
                android:textSize="22.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/_page_line" />

            <TextView
                android:id="@+id/p_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:gravity="center_vertical"
                android:text="00"
                android:textColor="#ff2b2b2b"
                android:textSize="22.0sp" />

            <ImageView
                android:id="@+id/p_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>