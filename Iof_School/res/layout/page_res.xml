<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_res_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5db5e"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/page_res_type_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cate_bg1"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/page_res_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/page_res_type_layout"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center_horizontal" >

                <include
                    android:id="@+id/item_res_1"
                    style="@style/ResItem"
                    layout="@layout/item_res" />

                <include
                    android:id="@+id/item_res_2"
                    style="@style/ResItem"
                    layout="@layout/item_res" />

                <include
                    android:id="@+id/item_res_3"
                    style="@style/ResItem"
                    layout="@layout/item_res" />

                <include
                    android:id="@+id/item_res_4"
                    style="@style/ResItem"
                    layout="@layout/item_res" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal" >

                <include
                    android:id="@+id/item_res_5"
                    style="@style/ResItem"
                    layout="@layout/item_res" />

                <include
                    android:id="@+id/item_res_6"
                    style="@style/ResItem"
                    layout="@layout/item_res" />

                <include
                    android:id="@+id/item_res_7"
                    style="@style/ResItem"
                    layout="@layout/item_res" />

                <include
                    android:id="@+id/item_res_8"
                    style="@style/ResItem"
                    layout="@layout/item_res" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_res_page"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#6e4333"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/page_res_progress_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:visibility="gone" >

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/page_res_list_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/page_res_list_layout"
        android:layout_alignTop="@id/page_res_list_layout"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/res_page_select" />

</RelativeLayout>