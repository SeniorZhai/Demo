<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
>
	<TextView
		android:id="@+id/item_time_lab"
		style="@style/SetInfoText"
		android:layout_marginLeft="18dp"
		android:text="时间设置"
	/>
	<LinearLayout
	 	android:layout_width="785dp"
	 	android:layout_height="151dp"
	 	android:orientation="vertical"
	 	android:paddingLeft="105dp"
	 	android:gravity="center_vertical"
	 	android:background="@drawable/set_time_layout_bg"
	>
		<LinearLayout
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:gravity="center_vertical"
		>
			<View
				android:id="@+id/item_time_select1"
			   	android:layout_width="55dp"
			   	android:layout_height="63dp"
			   	android:background="@drawable/set_select1"
			/>
			<include
				layout="@layout/item_num_sel"
				android:id="@+id/item_time_num1"
			/>
			<TextView
				style="@style/SetInfoText"
				android:text="小时"
			/>
		</LinearLayout>
		<LinearLayout
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:gravity="center_vertical"
		  	android:layout_marginTop="-15dp"
		>
			<View
				android:id="@+id/item_time_select2"
			   	android:layout_width="55dp"
			   	android:layout_height="63dp"
			   	android:background="@drawable/set_select1"
			/>
			<include
				layout="@layout/item_num_sel"
				android:id="@+id/item_time_num2"
			/>
			<TextView
				style="@style/SetInfoText"
				android:text="点     至"
			/>
			<include
				layout="@layout/item_num_sel"
				android:id="@+id/item_time_num3"
			/>
			<TextView
				style="@style/SetInfoText"
				android:text="点"
			/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
